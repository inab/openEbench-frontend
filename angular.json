{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "opeb": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "aot": true,
			"allowedCommonJsDependencies": [
				"@apidevtools/json-schema-ref-parser",
				"c3",
				"keycloak-js"
			],
                        "outputPath": "dist",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "tsConfig": "src/tsconfig.app.json",
                        "polyfills": "src/polyfills.ts",
                        "assets": [
                            "src/assets",
                            "src/favicon.ico",
                            "src/.htaccess",
                            "src/robots.txt"
                        ],
                        "styles": [
                            "./node_modules/datatables.net-dt/css/jquery.dataTables.css",
                            "./node_modules/c3/c3.min.css",
                            "./node_modules/bootstrap/dist/css/bootstrap.min.css",
                            "src/styles.css"
                        ],
                        "scripts": [
                            "node_modules/jquery/dist/jquery.js",
                            "./node_modules/jquery/dist/jquery.min.js",
                            "./node_modules/popper.js/dist/umd/popper.min.js",
                            "./node_modules/bootstrap/dist/js/bootstrap.min.js",
                            "node_modules/datatables.net/js/jquery.dataTables.js",
                            "./node_modules/c3/c3.min.js",
                            "./node_modules/d3/dist/d3.min.js"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "optimization": {
                                "scripts": true,
                                "styles": {
                                    "minify": true,
                                    "inlineCritical": false
                                },
                                "fonts": true
                            },
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ]
                        },
                        "dev_staging": {
                            "optimization": {
                                "scripts": true,
                                "styles": {
                                  "minify": true,
                                  "inlineCritical": false
                                },
                                "fonts": true
                            },
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true
                        },
                        "dev2": {
                            "fileReplacements": [
                              {
                                "replace": "src/environments/environment.ts",
                                "with": "src/environments/environment.dev2.ts"
                              }
                            ]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "opeb:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "opeb:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "opeb:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "karmaConfig": "./karma.conf.js",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.spec.json",
                        "scripts": [],
                        "styles": ["src/styles.css"],
                        "assets": ["src/assets", "src/favicon.ico"]
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "src/tsconfig.app.json",
                            "src/tsconfig.spec.json"
                        ],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        },
        "opeb-e2e": {
            "root": "",
            "sourceRoot": "",
            "projectType": "application",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "./protractor.conf.js",
                        "devServerTarget": "opeb:serve"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": ["e2e/tsconfig.e2e.json"],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        },
        "ng-fancy-lib": {
            "root": "projects/ng-fancy-lib",
            "sourceRoot": "projects/ng-fancy-lib/src",
            "projectType": "library",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-ng-packagr:build",
                    "options": {
                        "tsConfig": "projects/ng-fancy-lib/tsconfig.lib.json",
                        "project": "projects/ng-fancy-lib/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "project": "projects/ng-fancy-lib/ng-package.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/ng-fancy-lib/src/test.ts",
                        "tsConfig": "projects/ng-fancy-lib/tsconfig.spec.json",
                        "karmaConfig": "projects/ng-fancy-lib/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/ng-fancy-lib/tsconfig.lib.json",
                            "projects/ng-fancy-lib/tsconfig.spec.json"
                        ],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        }
    },
    "defaultProject": "opeb",
    "schematics": {
        "@schematics/angular:directive": {
            "prefix": "app"
        }
    }
}
